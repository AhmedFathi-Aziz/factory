generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          Int      @id @default(autoincrement())
  title       String
  titleAr     String
  description String
  descriptionAr String
  protein     String
  features    String
  featuresAr  String
  certifications   String
  certificationsAr String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model About {
  id           Int      @id @default(1)
  title        String
  titleAr      String
  subtitle     String
  subtitleAr   String
  mission      String
  missionAr    String
  vision       String
  visionAr     String
  values       String
  valuesAr     String
  story        String
  storyAr      String
  experience   String
  experienceAr String
  production   String
  productionAr String
  clients      String
  clientsAr    String
  scope        String
  scopeAr      String
  quality      String
  qualityAr    String
  updatedAt    DateTime @updatedAt
}

model Contact {
  id          Int      @id @default(autoincrement())
  phone       String
  email       String
  address     String
  phoneAr     String
  emailAr     String
  addressAr   String
  updatedAt   DateTime @updatedAt
}

model Home {
  id          Int      @id @default(autoincrement())
  heroTitle   String
  heroTitleAr String
  heroSubtitle String
  heroSubtitleAr String
  heroDescription String
  heroDescriptionAr String
  updatedAt   DateTime @updatedAt
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
  name     String @unique
  createdAt DateTime @default(now())
  role     String  @default("admin")
}

model Gallery {
  id        Int      @id @default(autoincrement())
  imageUrl  String
  caption   String
  captionAr String
  createdAt DateTime @default(now())
}

model ContactInfo {
  id        Int    @id @default(1)
  mobile    String
  telephone String
  fax       String
  address   String
  email     String
  website   String
}

model Partner {
  id          Int      @id @default(autoincrement())
  name        String
  industry    String
  logo        String
  country     String
  status      String   // 'active' or 'inactive'
  description String
}

model News {
  id          Int      @id @default(autoincrement())
  title       String
  titleAr     String
  content     String
  contentAr   String
  category    String
  categoryAr  String
  date        DateTime
  status      String   // 'published' or 'draft'
  featured    Boolean
}
